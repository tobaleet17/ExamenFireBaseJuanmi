<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÑADIR NUEVO PRODUCTO"/>

    <EditText
        android:id="@+id/edit_Nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del producto..."/>

    <EditText
        android:id="@+id/edit_Descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del producto..."/>

    <EditText
        android:id="@+id/edit_Precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/precio_prod"/>

    <Spinner
        android:id="@+id/spCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAñadirProducto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/anyadir_prod"/>
    <Button
        android:id="@+id/btn_listarUsers"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="USUARIOS" />

    <Button
        android:id="@+id/btnListarProducto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Listar Producto"/>
    <Button
        android:id="@+id/btnSalirAnyadir"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SALIR"/>

</LinearLayout>